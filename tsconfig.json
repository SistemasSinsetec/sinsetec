{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES2022",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "lib": ["ES2022", "DOM"],
    "declaration": false,
    "declarationMap": false,
    "composite": false,
    "incremental": true
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/test.ts",
    "src/**/*.ngtypecheck.ts",
    "src/server.ts",
    "src/main.server.ts",
    "src/app/app.config.server.ts",
    "src/app/app.routes.server.ts",
    "src/app/auth/controllers/auth.controller.ts",
    "src/app/auth/routes/auth.routes.ts",
    "src/app/auth/services/api.service.ts",
    "src/app/auth/services/database.service.ts",
    "src/app/features/home/home.module.ts",
    "src/app/features/register-refacciones/truncate.pipe.ts",
    "src/app/interceptors/auth.interceptor.ts"
  ]
}
